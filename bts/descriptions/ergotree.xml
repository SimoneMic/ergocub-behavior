<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <ReactiveFallback>
                <Condition ID="BoxDetected" poi="{the_poi}" poi_pos="{the_poi_pos}"/>
                <Condition ID="FaceDetected" poi="{the_poi}" poi_pos="{the_poi_pos}"/>
                <AlwaysSuccess/>
            </ReactiveFallback>
            <Action ID="RobotLookAtPOI" poi="{the_poi}" poi_pos="{the_poi_pos}"/>
            <Action ID="RobotChangeFace" poi="{the_poi}"/>
            <ReactiveFallback>
                <ReactiveSequence>
                    <Condition ID="POIIsObject" poi="{the_poi}"/>
                    <Condition ID="ObjectIsClose"/>
                    <Action ID="GoReady"/>
                    <Action ID="GoGrasp"/>
                </ReactiveSequence>
                <ReactiveSequence>
                    <Condition ID="POIIsFace" poi="{the_poi}"/>
                    <Condition ID="FocusDetected"/>
                    <Action ID="DoResponseAction"/>
                </ReactiveSequence>
                <Action ID="GoHome"/>
            </ReactiveFallback>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="BoxDetected">
            <output_port name="poi" type="std::string"/>
            <output_port name="poi_pos" type="std::vector&lt;double, std::allocator&lt;double&gt; &gt;"/>
        </Condition>
        <Action ID="DoResponseAction"/>
        <Condition ID="FaceDetected">
            <output_port name="poi" type="std::string"/>
            <output_port name="poi_pos" type="std::vector&lt;double, std::allocator&lt;double&gt; &gt;"/>
        </Condition>
        <Condition ID="FocusDetected"/>
        <Action ID="GoGrasp"/>
        <Action ID="GoHome"/>
        <Action ID="GoReady"/>
        <Condition ID="ObjectIsClose"/>
        <Condition ID="POIIsFace">
            <input_port name="poi" type="std::string"/>
        </Condition>
        <Condition ID="POIIsObject">
            <input_port name="poi" type="std::string"/>
        </Condition>
        <Action ID="RobotChangeFace">
            <input_port name="poi" type="std::string"/>
        </Action>
        <Action ID="RobotLookAtPOI">
            <input_port name="poi" type="std::string"/>
            <input_port name="poi_pos" type="std::vector&lt;double, std::allocator&lt;double&gt; &gt;"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
